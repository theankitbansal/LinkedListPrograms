
//Program to find the sum of the all the elements
#include <bits/stdc++.h>

using namespace std;

struct Node{
    int data;
    struct Node *next;
}*first;

void create(int A[], int n){
    struct Node *t, *last;
    first =new Node;
    first->data=A[0];
    first->next=NULL;
    last=first;
    for(int i=1; i<n; i++){
        t=new Node;
        t->data=A[i];
        t->next=NULL;
        last->next=t;
        last=t;
    }
}

void Display(struct Node *p){
    if(p!=NULL){
        Display(p->next);
        cout<<p->data<<endl;
    }
}

int sumOfAllElements(struct Node *p){
    int sum=0;
    while(p){
        sum+=p->data;
        p=p->next;
    }
    return(sum);
}

int main()
{
    int A[]={3,5,7,10,15};
    create(A,5);
    cout<<sumOfAllElements(first);
    return 0;
}
