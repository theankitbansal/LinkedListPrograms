
//Program to find the minimum element in the linked list using recursion
#include <bits/stdc++.h>

using namespace std;

struct Node{
    int data;
    struct Node *next;
}*first;

void create(int A[], int n){
    struct Node *t, *last;
    first =new Node;
    first->data=A[0];
    first->next=NULL;
    last=first;
    for(int i=1; i<n; i++){
        t=new Node;
        t->data=A[i];
        t->next=NULL;
        last->next=t;
        last=t;
    }
}

void Display(struct Node *p){
    if(p!=NULL){
        Display(p->next);
        cout<<p->data<<endl;
    }
}

int min(struct Node *p){
    int x=0;
    if(p==0)
        return INT_MAX;
    x=min(p->next);
    return x<p->data?x:p->data;
}

int main()
{
    int A[]={3,5,25,10,15};
    create(A,5);
    cout<<min(first);
    return 0;
}
